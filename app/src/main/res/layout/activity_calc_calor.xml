<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ferrarizero.caloriecalculator.CaloricCalculator">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:id="@+id/tvAge"
            android:textColor="#010101"
            android:textSize="20dp" />

        <EditText
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:id="@+id/etAge"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tvAge"
            android:layout_toLeftOf="@+id/tvGender"
            android:layout_toStartOf="@+id/tvGender"
            android:layout_weight="0.60" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/swGender"
            android:checked="false"
            android:textSize="17dp"
            android:layout_weight="0.19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Female"
            android:id="@+id/tvFemale"
            android:layout_weight="0.18"
            android:textColor="#010101"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_above="@+id/btnCalculate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:id="@+id/linearLayout3">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lightly Active"
            android:id="@+id/swActivity"
            android:checked="false"
            android:layout_weight="0.71"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="          Very Active"
            android:id="@+id/textView5"
            android:layout_alignParentStart="true"
            android:textColor="#010101"
            android:textSize="17dp"
            android:layout_above="@+id/textView4"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:id="@+id/tvHeight"
            android:layout_weight="0.05"
            android:textColor="#010101"
            android:textSize="20dp" />

        <EditText
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/etHeight"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.37" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:weightSum="1"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:id="@+id/tvWeight"
            android:textColor="#010101"
            android:textSize="20dp"
            android:layout_weight="0.05" />

        <EditText
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/etWeight"
            android:layout_weight="0.36" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/btnCalculate"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvResult"
        android:layout_below="@+id/btnCalculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textColor="#010101"
        android:textSize="30dp" />

</RelativeLayout>
